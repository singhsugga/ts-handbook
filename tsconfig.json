{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "dist/",
    "noEmit": true, // for testing 
    "lib": [
      "es7",
      "dom"
    ]
  },
  "exclude": ["node_modules"],
  "include": [
    "src/"
  ]
}